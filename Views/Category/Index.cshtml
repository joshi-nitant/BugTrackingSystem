@model CategoryViewModel

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>
<div class="tt-topic-list tt-offset-top-30">

    <div class="tt-list-header tt-border-bottom">
        <div class="tt-col-topic">Name</div>
        <div class="tt-col-value hide-mobile">Edit</div>
        <div class="tt-col-value hide-mobile">Delete</div>
    </div>

    @foreach (var category in Model.categories)
    {
        <div class="tt-item">
            <div class="tt-col-avatar">
                <svg class="tt-icon">
                    <use xlink:href="#icon-ava-n"></use>
                </svg>
            </div>
            <div class="tt-col-description">
                <h6 class="tt-title">
                    <a asp-action="SubCategory" asp-controller="Category"
                       asp-route-id="@category.CatID">
                        @category.CatName
                    </a>
                </h6>
            </div>


            <div class="tt-col-value tt-color-select hide-mobile">
                <a class="fa fa-pencil-square-o" aria-hidden="true" style="color:dodgerblue;font-size: 25px;" asp-action="Index" asp-controller="Category"
                   asp-route-id="@category.CatID"></a>
            </div>
            <div class="tt-col-value tt-color-select hide-mobile">
                <form method="post" asp-action="Delete" asp-controller="Category" asp-route-id="@category.CatID">
                    <button type="submit" class="fa fa-trash" style="color:red;font-size: 20px;" aria-hidden="true"
                            onclick="return confirm('Are you sure you want to delete this category?')">
                    </button>
                </form>
            </div>

        </div>
    }
    <div class="tt-wrapper-inner">
        <form class="form-default form-create-topic" method="post" asp-controller="Category" asp-action="Index">
            <input asp-for="category.CatID" hidden />
            <div class="form-group">
                <label asp-for="category.CatName">Category</label>
                <div class="tt-value-wrapper">
                    <input asp-for="category.CatName"
                           class="form-control"
                           id="inputTopicTitle"
                           placeholder="Category Name" />
                    <span class="tt-value-input">99</span>
                </div>
                <div class="tt-note">
                   Category which specifies either a new project or a technology.
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 center-block">
                    @if (Model.category== null)
                    {
                        <input type="submit" value="Add" class="btn btn-secondary btn-width-lg center-block" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-secondary btn-width-lg center-block" />
                    }

                </div>
            </div>
        </form>
    </div>
</div>
