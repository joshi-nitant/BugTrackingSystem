@model EditUserViewModel

    @{
        ViewBag.Title = "Edit User";
    }

    <h1>Edit User</h1>
    <main id="tt-pageContent">
        
        <div class="container">
            <div class="tt-wrapper-inner">
                <h1 class="tt-title-border">Edit User</h1>
               
                <form class="form-default form-create-topic" method="post">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <div class="tt-value-wrapper">
                            <input asp-for="Name"
                                   class="form-control"
                                   id="inputTopicTitle"
                                   placeholder="Name" />
                            <span class="tt-value-input">99</span>
                        </div>
                        <span asp-validation-for="Name" class="text-danger">

                        </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email ID</label>
                        <div class="tt-value-wrapper">
                            <input asp-for="Email"
                                   class="form-control"
                                   id="inputTopicTitle"
                                   placeholder="Email" />
                            <span class="tt-value-input">99</span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger">

                        </span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Departments"></label>
                        <div class="tt-value-wrapper">
                            <select class="form-control" asp-for="Departments" asp-items="Html.GetEnumSelectList<Department>()">
                                <option value="">Please Select</option>
                            </select>

                        </div>
                        <span asp-validation-for="Departments" class="text-danger">

                        </span>
                    </div>

                    <div class="row">
                        <div class="col-auto ml-md-auto">
                            <input type="submit" value="Update User" class="btn btn-secondary btn-width-lg" />
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </main>
